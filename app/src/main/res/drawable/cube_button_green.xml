<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
            <solid android:angle="-90" android:color="#43A047" android:startColor="#81C784" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="@android:color/black" />
            <solid android:angle="-90" android:color="#43A047" android:startColor="#81C784" />
        </shape>
    </item>

    <item android:state_activated="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
            <gradient android:angle="-90" android:endColor="@color/cubeGreen" android:startColor="#69F0AE" />
        </shape>
    </item>
</selector>