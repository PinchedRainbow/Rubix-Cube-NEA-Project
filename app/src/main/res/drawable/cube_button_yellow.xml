<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
            <gradient android:angle="-90" android:endColor="#F9A825" android:startColor="#FDD835" />
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="@android:color/black" />
            <gradient android:angle="-90" android:endColor="#F9A825" android:startColor="#FDD835" />
        </shape>
    </item>

    <item android:state_activated="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@android:color/black" />
            <gradient android:angle="-90" android:endColor="@color/cubeYellow" android:startColor="#FFFF00" />
        </shape>
    </item>
</selector>